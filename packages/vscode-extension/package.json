{
  "name": "@pbn/vscode-extension",
  "displayName": "Performance Bottleneck Analyzer",
  "version": "0.1.0",
  "description": "Real-time performance monitoring and alerts in VS Code",
  "main": "dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "pbn.showSummary",
        "title": "PBN: Show Performance Summary"
      },
      {
        "command": "pbn.showAlert",
        "title": "PBN: Show Alert Log"
      },
      {
        "command": "pbn.configure",
        "title": "PBN: Configure Connection"
      },
      {
        "command": "pbn.startMonitoring",
        "title": "PBN: Start Monitoring"
      },
      {
        "command": "pbn.stopMonitoring",
        "title": "PBN: Stop Monitoring"
      }
    ],
    "configuration": {
      "title": "Performance Bottleneck Analyzer",
      "properties": {
        "pbn.apiUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "PBN API server URL"
        },
        "pbn.siteId": {
          "type": "string",
          "default": "",
          "description": "Site ID to monitor"
        },
        "pbn.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authentication"
        },
        "pbn.pollInterval": {
          "type": "number",
          "default": 60,
          "description": "Polling interval in seconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "dev": "npm run esbuild-watch",
    "build": "npm run vscode:prepublish",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/vscode": "^1.84.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "keywords": [
    "performance",
    "monitoring",
    "vscode"
  ],
  "author": "Your Name",
  "license": "MIT"
}
